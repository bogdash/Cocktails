<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_filer_screen"
    android:padding="30dp"
    tools:context=".filters.FragmentFilters">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_filters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintTop_toTopOf="@id/tvTitle" />

    <TextView
        android:id="@+id/tvAlcoholl"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/title_alcohol"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />


    <TextView
        android:id="@+id/btnFilterAlcoholOnn"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="Алкогольные"
        app:layout_constraintEnd_toStartOf="@id/btnFilterAlcoholOfff"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlcoholl" />

    <TextView
        android:id="@+id/btnFilterAlcoholOfff"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Не алкогольные"
        app:layout_constraintBottom_toBottomOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintTop_toTopOf="@id/btnFilterAlcoholOnn" />

    <TextView
        android:id="@+id/btnFilterAlcoholOptionn"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Опционально"
        app:layout_constraintEnd_toEndOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintStart_toStartOf="@id/btnFilterAlcoholOnn"
        app:layout_constraintTop_toBottomOf="@id/btnFilterAlcoholOnn" />

    <TextView
        android:id="@+id/tvIngredientss"
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="Игредиенты"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvAlcoholl"
        app:layout_constraintTop_toBottomOf="@id/btnFilterAlcoholOptionn" />

    <TextView
        android:id="@+id/btnFilterJinee"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:text="Джин"
        app:layout_constraintEnd_toStartOf="@id/btnFilterVodkaa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvIngredientss" />

    <TextView
        android:id="@+id/btnFilterVodkaa"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Водка"
        app:layout_constraintBottom_toBottomOf="@id/btnFilterJinee"
        app:layout_constraintEnd_toStartOf="@id/btnFilterTekilaa"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnFilterJinee"
        app:layout_constraintTop_toTopOf="@id/btnFilterJinee" />

    <TextView
        android:id="@+id/btnFilterTekilaa"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Текила"
        app:layout_constraintBottom_toBottomOf="@id/btnFilterJinee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnFilterVodkaa"
        app:layout_constraintTop_toTopOf="@id/btnFilterJinee" />

    <TextView
        android:id="@+id/btnFilterRommm"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:text="Ром"
        app:layout_constraintEnd_toStartOf="@id/btnFilterWhiskeyyy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFilterJinee" />

    <TextView
        android:id="@+id/btnFilterWhiskeyyy"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Виски"
        app:layout_constraintBottom_toBottomOf="@id/btnFilterRommm"
        app:layout_constraintEnd_toStartOf="@id/btnFilterBrendyyyy"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnFilterRommm"
        app:layout_constraintTop_toTopOf="@id/btnFilterRommm" />

    <TextView
        android:id="@+id/btnFilterBrendyyyy"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Бренди"
        app:layout_constraintBottom_toBottomOf="@id/btnFilterWhiskeyyy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/btnFilterWhiskeyyy"
        app:layout_constraintTop_toTopOf="@id/btnFilterWhiskeyyy" />

    <TextView
        android:id="@+id/btnFilterChampange"
        style="@style/TextOnButtonFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:text="Шампанское"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnFilterRommm" />

    <TextView
        android:id="@+id/btnReset"
        style="@style/TextOnButtonFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/orange_red"
        android:text="Сбросить"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnApply"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnApply"
        style="@style/TextOnButtonFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sunglow"
        android:text="Применить"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/btnReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnReset"
        app:layout_constraintTop_toTopOf="@id/btnReset" />


</androidx.constraintlayout.widget.ConstraintLayout>