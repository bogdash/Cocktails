<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/tiber</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBarText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExpandedTitleText" parent="Widget.Material3.CollapsingToolbar">
        <item name="expandedTitleTextColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="background">@drawable/bg_title_collapsing_toolbar</item>
    </style>

</resources>