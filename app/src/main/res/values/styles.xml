<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:andriod="http://schemas.android.com/apk/res/android">
    <style name="TextOnButtonFilters" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/regent_grey</item>
        <item name="android:background">@drawable/btn_bottom_filter</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>

    <style name="ShakeAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shake_dialog_rounded_corner</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/tiber</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ToolBarText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--homeScreen-->
    <style name="FooterText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--filterScreen-->
    <style name="ChipFilterButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_background_text</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <!--detailScreen-->
    <style name="DetailedTitleTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Tab.Selected" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="TextAppearance.Tab.Unselected" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/submarine</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="IngredientsTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MeasureTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/regent_grey</item>
    </style>

    <style name="DirectionsTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>