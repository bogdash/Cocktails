<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:andriod="http://schemas.android.com/apk/res/android">
    <style name="TextOnButtonFilters" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/regent_grey</item>
        <item name="android:background">@drawable/btn_bottom_filter</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/tiber</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolBarText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="ChipFilterButton" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_background_text</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="chipMinHeight">40dp</item>
    </style>
</resources>